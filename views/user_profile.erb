<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<% if session[:user_id] != nil %>

  <h1><%= "#{@user.fname} #{@user.lname}'s profile!"%></h1>
  <img src=<%= @user.picture %> alt="">
  <% if session[:user_id] == @user.id %>
    <h3><a href="/users/<%= @user.id %>/edit">Edit your account </a></h2>
    <h3><a href="/users/<%= @user.id %>/delete">Delete your account </a></h2>
  <% end %>
  <div class="panel panel-default">
    <div class="panel-heading">User Posts</div>
    <div class="panel-body">
      <% if @user.posts.count == 0 %>
        <div class="media">
          No posts to display!
        </div>

      <% else %>

        <% @user.posts.each do |post| %>
          <div class="media">
            <a class="pull-left" href="#">
              <img class="media-object" src=<%= @user.picture %>>
            </a>
            <div class="media-body">
              <h4 class="media-heading"><a href="/users/<%= @user.id %>"><%= "#{@user.fname} #{@user.lname}" %></a></h4>
              <p><%= post.body %></p>
              <a href="/posts/<%= post.id %>">Link to this post</a>
              <% if session[:user_id] == @user.id %>
                <span> | </span><a href="/posts/<%= post.id %>/edit">Edit this post</a><span> | </span>
                <a href="/posts/<%= post.id %>/delete">Delete this post</a>
              <% end %>
            </div>
          </div>
        <% end %>

    </div>
  </div>
<% end %>

<% else %>
  <h1>You must be logged in to look at member profiles!</h1>
<% end %>
